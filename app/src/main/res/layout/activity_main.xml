<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/msg_show_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/msg_show_str"
        android:textAllCaps="false"
        android:textColor="@color/dark_purple"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/hint_show_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/hint_show_str_2"
        android:textColor="@color/dark_purple"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/attempts_left_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/attempts_left_str"
        android:textColor="@color/dark_purple"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/num_user_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:onClick="chooseGameMode"
        android:text="@string/choose_range_number"
        android:textSize="20sp" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_9"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:onClick="onClickNumber"
            android:text="9"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:onClick="onClickNumber"
            android:text="0"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:onClick="onClickNumber"
            android:text="8"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/button_7"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:onClick="onClickNumber"
            android:text="7"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:onClick="onClickNumber"
            android:text="6"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/button_4"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:onClick="onClickNumber"
            android:text="4"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:onClick="onClickNumber"
            android:text="5"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:onClick="onClickNumber"
            android:text="2"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/button_1"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:onClick="onClickNumber"
            android:text="1"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:onClick="onClickNumber"
            android:text="3"
            app:layout_column="3"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/guess_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:onClick="guess"
        android:text="@string/guess_str"
        android:textSize="20sp" />

    <Button
        android:id="@+id/restart_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:onClick="restart"
        android:text="@string/restart_str"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:onClick="clear"
        android:text="@string/clear"
        android:textSize="20sp" />

</LinearLayout>